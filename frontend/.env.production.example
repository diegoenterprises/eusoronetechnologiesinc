# ============================================================================
# EUSOTRIP PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env.production and fill in the values
# ============================================================================

# =========================
# SERVER CONFIGURATION
# =========================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# =========================
# DATABASE (MySQL/PostgreSQL)
# =========================
DATABASE_URL=mysql://user:password@host:3306/eusotrip
DATABASE_SSL=true
DATABASE_POOL_SIZE=20

# =========================
# REDIS (Cache & Pub/Sub)
# =========================
REDIS_URL=redis://user:password@host:6379
REDIS_TLS=true

# =========================
# AUTHENTICATION
# =========================
JWT_SECRET=your-256-bit-secret-key-here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-here
COOKIE_DOMAIN=.eusotrip.com

# =========================
# WEBSOCKET
# =========================
VITE_WS_URL=wss://api.eusotrip.com/ws
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=10000

# =========================
# EXTERNAL APIS
# =========================
# Stripe Payments
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
VITE_STRIPE_PUBLIC_KEY=pk_live_...

# Twilio SMS
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# SendGrid Email
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@eusotrip.com

# Google Maps
GOOGLE_MAPS_API_KEY=AIza...
VITE_GOOGLE_MAPS_KEY=AIza...

# HERE Maps (Truck Routing)
HERE_API_KEY=...

# Gemini AI (ESANG)
GEMINI_API_KEY=AIzaSy...

# =========================
# FMCSA & COMPLIANCE
# =========================
FMCSA_WEB_KEY=...
CLEARINGHOUSE_API_KEY=...

# =========================
# ELD INTEGRATIONS
# =========================
SAMSARA_API_KEY=...
KEEPTRUCKIN_API_KEY=...

# =========================
# LOAD BOARDS
# =========================
DAT_API_KEY=...
TRUCKSTOP_API_KEY=...

# =========================
# ANALYTICS
# =========================
VITE_ANALYTICS_ENDPOINT=https://analytics.eusotrip.com
VITE_ANALYTICS_WEBSITE_ID=...

# =========================
# FILE STORAGE (S3)
# =========================
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET=eusotrip-production

# =========================
# RATE LIMITING
# =========================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# =========================
# SECURITY
# =========================
CORS_ORIGIN=https://eusotrip.com,https://app.eusotrip.com
HELMET_ENABLED=true
CSRF_ENABLED=true

# =========================
# LOGGING
# =========================
LOG_LEVEL=info
LOG_FORMAT=json

# =========================
# FEATURE FLAGS
# =========================
FEATURE_GAMIFICATION=true
FEATURE_SPECTRA_MATCH=true
FEATURE_EUSO_TICKET=true
FEATURE_ZEUN_MAINTENANCE=true
